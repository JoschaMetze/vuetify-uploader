{
  "name": "@nsoft/vuetify-uploader",
  "version": "1.0.5",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name vuetify-uploader src/index.js",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "coverage": "npm test && codecov",
    "prepublish": "npm run build"
  },
  "license": "MIT",
  "author": "Chameleon Team <chameleon@nsoft.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/chmjs/vuetify-uploader"
  },
  "main": "dist/vuetify-uploader.umd.js",
  "dependencies": {
    "axios": "^0.18.0",
    "pretty-bytes": "^5.1.0",
    "vue": "^2.5.16",
    "vuetify": "^1.0.19"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.3",
    "@vue/cli-service": "^3.0.0-rc.3",
    "@vue/eslint-config-airbnb": "^3.0.0-rc.3",
    "@vue/test-utils": "1.0.0-beta.16",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-imports": "^1.5.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.2",
    "eslint-plugin-jest": "^21.17.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-cli-plugin-vuetify": "^0.1.6",
    "vue-template-compiler": "^2.5.16",
    "webpack-bundle-analyzer": "^2.13.1"
  },
  "babel": {
    "plugins": [
      [
        "transform-imports",
        {
          "vuetify": {
            "transform": "vuetify/es5/components/${member}",
            "preventFullImport": true
          }
        }
      ]
    ],
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "vue": "never"
        }
      ],
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ]
  }
}
